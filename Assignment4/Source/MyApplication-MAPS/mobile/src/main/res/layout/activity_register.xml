<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.namrata.myapplication_maps.RegisterActivity">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/etFirst"
        android:layout_alignParentStart="true"
        android:id="@+id/etLast"
        android:layout_alignParentEnd="true"
        android:hint="LastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/etLast"
        android:layout_alignParentStart="true"
        android:id="@+id/etUsername"
        android:layout_alignParentEnd="true"
        android:hint="Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/etUsername"
        android:layout_alignParentStart="true"
        android:id="@+id/etSet"
        android:layout_alignParentEnd="true"
        android:hint="SetPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/etSet"
        android:layout_alignParentStart="true"
        android:id="@+id/etConf"
        android:layout_alignParentEnd="true"
        android:hint="ConfirmPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentStart="true"
        android:id="@+id/editText8"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etEmail"
        android:layout_below="@+id/etConf"
        android:layout_alignParentStart="true"
        android:hint="Email"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentStart="true"
        android:id="@+id/etPhone"
        android:layout_alignParentEnd="true"
        android:hint="Phone" />


    <TextView
        android:text="Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RegisterHead"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:elevation="24dp"
        android:background="@android:color/background_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etFirst"
        android:hint="FirstName"
        android:singleLine="true"
        android:backgroundTint="@color/colorAccent"
        android:layout_below="@+id/RegisterHead"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butRegister"
        android:layout_below="@+id/editText8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="122dp" />

    <TextView
        android:text="Have an Account?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idHaveacc"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/butLogin"
        android:layout_alignBottom="@+id/butLogin"
        android:layout_toStartOf="@+id/butRegister"
        android:layout_marginEnd="12dp" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butLogin"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/butRegister" />
</RelativeLayout>
